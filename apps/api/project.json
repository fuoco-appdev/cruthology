{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "targets": {
    "build-protoc-gen-js": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bazel build //generator:protoc-gen-js",
        "parallel": false,
        "cwd": "submodules/protobuf-javascript"
      }
    },
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "commands": []
      },
      "configurations": {
        "development": {
          "commands": [
            "scoop install bazel",
            "npx nx run api:build-protoc-gen-js"
          ],
          "parallel": false
        },
        "production": {
          "command": "",
          "parallel": false
        }
      }
    },
    "proto-generate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "protoc --plugin=protoc-gen-js=submodules/protobuf-javascript/bazel-bin/generator/protoc-gen-js.exe --js_out=import_style=commonjs,binary:protobuf protobuf/core.proto",
          "deno run --allow-read --allow-write --allow-env https://deno.land/x/deno_google_protobuf/tools/build.ts protobuf apps/api/src"
        ],
        "parallel": false
      }
    },
    "create-migration": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npx pg-migrate new {args.name}"],
        "parallel": false,
        "cwd": "apps/api"
      }
    },
    "migrate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx pg-migrate migrate --migrations-table=app_migrations --connection={args.connection}"
        ],
        "parallel": false,
        "cwd": "apps/api"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["supabase functions serve development"],
        "cwd": "apps/api/src",
        "parallel": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/api/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/api"],
      "options": {
        "jestConfig": "apps/api/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
